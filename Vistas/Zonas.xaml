<Window x:Class="Vistas.Zonas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zonas" Height="300" Width="352" WindowStartupLocation="CenterScreen" Background="{StaticResource BackgroundBrush}"
        >
    <Window.Resources>

        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource plantilla_button}"></Style>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource plantillaTextBlock}"></Style>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource EstiloError}"></Style>
    </Window.Resources>
    <Grid >
        <Button Content="Z1" Height="56" HorizontalAlignment="Left" Margin="12,93,0,0" Name="btnZ1" VerticalAlignment="Top" Width="76" Click="btnZ1_Click" ></Button>
        <Button Content="Z2" Height="56" HorizontalAlignment="Left" Margin="126,93,0,0" Name="btnZ2" VerticalAlignment="Top" Width="76" Click="btnZ2_Click" ></Button>
        <Button Content="Z3" Height="56" HorizontalAlignment="Left" Margin="242,93,0,0" Name="btnZ3" VerticalAlignment="Top" Width="76" Click="btnZ3_Click" ></Button>
        <Button Content="Volver" Height="25" HorizontalAlignment="Right" Margin="0,0,242,21" Name="btnVolver" VerticalAlignment="Bottom" Width="75" Click="btnVolver_Click" />
    </Grid>
</Window>